@model IEnumerable<SoftBox.DataBase.Entities.Room>
<h1>Выберите чат</h1>
<table>
    <tbody>
        @foreach (var chat in Model)
        {
            <tr>
                <th>
                    @chat.Name
                </th>
                <th>
                    @chat.Id
                </th>
                <th>
                    @Context.Request.Path
                    <a asp-action="Chat" asp-controller="Chat" asp-route-chatId="@chat.Id">Выбрать</a>
                </th>

            </tr>
        }
    </tbody>
</table>

