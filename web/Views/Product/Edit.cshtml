@model SoftBox.DataBase.Entities.Product

<form method="post" asp-action="Edit">
    <dib class="border p-3 mt-4">
        <dib class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </dib>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class"text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class"text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductCategories"></label>
            <input asp-for="ProductCategories" class="form-control" />
            <span asp-validation-for="ProductCategories" class"text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="ProductList" asp-action="AllProducts" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </dib>
</form>
