@model SoftBox.DataBase.Entities.Product

<form method="post">
    <div class ="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Create Product</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ProductCategories"></label>
        <input asp-for="ProductCategories" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="ProductList" asp-action="AllProducts" class="btn btn-secondary" style="width:150px">
        Back to List
    </a> 
    </div>
</form>